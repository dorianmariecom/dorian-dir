#!/usr/bin/env ruby
# frozen_string_literal: true

if ARGV.first == "-h" || ARGV.first == "--help"
  puts "USAGE: dir [PATHS...]"
  exit
end

PATHS = ARGV.any? ? ARGV : ["."]

PATHS.each do |path|
  puts(
    Dir.glob("#{path}/*").select { |path| Dir.exist?(path) }.map do |path|
      File.basename(path)
    end
  )
end
